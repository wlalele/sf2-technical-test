{% extends 'base.html.twig' %}

{% block body %}
<div class="row" style="margin-bottom: 20px;">
    <div class="col-md-8 col-md-push-2">
        <a href="{{ path('homepage') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            Back
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-push-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Add a comment</h3>
            </div>
            <div class="panel-body">
                <form method="post" id="comment-form" class="form-horizontal">
                    <div class="form-group">
                        <label for="username" class="col-sm-2 control-label">
                            Username
                        </label>
                        <div class="col-sm-10">
                            <select name="repository" class="form-control" autofocus>
                                {% for repository in repositories %}
                                    <option value="{{ repository.full_name }}">
                                        {{ repository.full_name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="comment" class="col-sm-2 control-label">
                            Set comment:
                        </label>
                        <div class="col-sm-10">
                            <textarea name="comment" id="comment" class="form-control" cols="30" rows="10"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">
                                Submit
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    {% if comments|length > 0 %}
        <div class="col-md-8 col-md-push-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Comment(s)</h3>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Author</th>
                                <th>Date</th>
                                <th>Repository</th>
                                <th>Comment</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                            <tr>
                                <th>{{ comment.author }}</th>
                                <th>{{ comment.date.format('Y-m-d H:i:s') }}</th>
                                <th>{{ comment.repository }}</th>
                                <th>{{ comment.content }}</th>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}